

<h1>Question Details:</h1>


<h2><%= @question.id %>.) <%= @question.title %></h2>
<h2>Description:</h2>
<p> <%= @question.description %></p>

<h2>Answer This Question</h2>



<%= form_for [@question, @answer] do |f| %>

<% if @answer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this question from being posted:</h2>

    <ul>
    <% @answer.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


  <div class="Answer">
    <%= f.label :description, "Answer" %><br />
    <%= f.text_field :description %>
  </div>


  <div class="actions">
    <%= f.submit "Submit Answer" %>
  </div>
<% end %>

<h2>Answers for this Question</h2>
<% @answers.each do |a| %>
 <h3><%= a.description %></h3>
 <% end %>

<%= link_to 'Back to Questions', questions_path %>
