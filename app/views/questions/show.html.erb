

<h1>Question Details:</h1>


<h2><%= @question.id %>.) <%= @question.title %></h2>
<h2>Description:</h2>
<p> <%= @question.description %></p>

<h2>Answer This Question</h2>



<%= form_for [@question, @answer] do |f| %>
  <div class="Answer">
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %> 

<%= link_to 'Back to Questions', questions_path %>
